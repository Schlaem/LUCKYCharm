<Window x:Class="LUCKYCharm.UI.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LUCKYCharm.UI.WPF"
        mc:Ignorable="d"
        Title="LUCKYCharm"
        Height="450" Width="800"
        Background="Black"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen">

  <Window.Resources>
    <Style TargetType="{x:Type Label}">
      <Setter Property="Foreground" Value="White" />
      <Setter Property="FontFamily" Value="Segoe UI Light" />
      <Setter Property="FontSize" Value="16" />
    </Style>
    <Style TargetType="{x:Type CheckBox}">
      <Setter Property="Foreground" Value="White" />
      <Setter Property="FontFamily" Value="Segoe UI Light" />
      <Setter Property="FontSize" Value="16" />
    </Style>
    <Style TargetType="{x:Type Button}">
      <Setter Property="Cursor" Value="Hand" />
      <Setter Property="FontFamily" Value="Segoe UI Light" />
      <Setter Property="FontSize" Value="16" />
      <Setter Property="Background" Value="Transparent" />
      <Setter Property="Foreground" Value="White" />
    </Style>
  </Window.Resources>
  
  <Grid MouseDown="Grid_MouseDown">
    <StackPanel x:Name="ConfigurationPanel" Orientation="Vertical">
      <Label Content="LUCKYCharm"
             HorizontalAlignment="Center"
             FontSize="24"
             Padding="20" />
      <Label Content="Zahlenbereich"
             HorizontalAlignment="Center"
             Padding="20" />
      <Grid HorizontalAlignment="Center">
        <Grid.ColumnDefinitions>
          <ColumnDefinition Width="*" />
          <ColumnDefinition Width="Auto" />
          <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBox x:Name="NumRangeFromTextBox" Grid.Column="0" Text="1" Padding="8" Width="100" HorizontalContentAlignment="Center" TextChanged="TextBox_TextChanged" />
        <TextBlock Grid.Column="1" Text="   -   " VerticalAlignment="Center" HorizontalAlignment="Center" Foreground="White" />
        <TextBox x:Name="NumRangeToTextBox" Grid.Column="2" Text="1000" Padding="8" Width="100" HorizontalContentAlignment="Center" TextChanged="TextBox_TextChanged" />
      </Grid>
      <CheckBox x:Name="HistoryCheckBox" Content="Verlauf zeigen" HorizontalAlignment="Center" Margin="20" />
      <CheckBox x:Name="DarkThemeCheckBox" Content="Dunkles Design verwenden" HorizontalAlignment="Center" Margin="20" IsChecked="True" />
      <Button x:Name="StartButton" Content="START" HorizontalAlignment="Center" Width="100" Height="40"
              Click="StartButton_Click" />
    </StackPanel>

    <Viewbox x:Name="CounterViewBox" Stretch="Uniform" Margin="20" Visibility="Collapsed">
      <Grid>
        <Grid.RowDefinitions>
          <RowDefinition Height="Auto" />
          <RowDefinition Height="2*" />
          <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Button x:Name="CloseButton" HorizontalAlignment="Right" Content="X" Foreground="#99444444"
                BorderThickness="0"
                Click="CloseButton_Click" />
        <TextBlock x:Name="NumberTextBlock" Grid.Row="1"
                   Foreground="White" Text="START" 
                   FontFamily="Segoe UI" FontSize="120" Width="400"
                   TextAlignment="Center"
                   HorizontalAlignment="Center" VerticalAlignment="Center"
                   Margin="20"/>
        <Button x:Name="NextButton" Content="NEXT" Grid.Row="2" Margin="20"
                Width="100"
                Click="NextButton_Click" />
      </Grid>
    </Viewbox>
  </Grid>
</Window>
